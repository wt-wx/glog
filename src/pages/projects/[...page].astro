---
export const prerender = true;
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Pagination from '../../components/Pagination.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

export async function getStaticPaths({ paginate }) {
	const projects = [
		{
			title: "OhBona",
			category: "Core Venture",
			description: "Dedicated to breaking traditional dialog interactions. Through the closed loop of 'Perception -> Path Planning -> Minimalist Confirmation', it evolves AI from a 'chatbot' into a truly sticky 'Digital Assistant'.",
			tags: ["AI Agent", "Task Execution", "UX Design"],
			status: "Active",
			image: "/projects_hero_abstract.png",
			gradient: "from-purple-500/20 to-blue-500/20"
		},
        {
			title: "Qiulot.io",
			category: "Core Venture",
			description: "A decentralized sports prediction market DApp based on Web3. Benchmarking against Polymarket and Kalshi, it deeply cultivates sports event incentive models and odds engines to build a decentralized prediction ecosystem.",
			link: "https://qiulot.io",
			tags: ["Web3", "Prediction Market", "DApp"],
			status: "Active",
			gradient: "from-blue-600/20 to-cyan-500/20"
		},
		{
			title: "Qiulot Game",
			category: "Core Venture",
			description: "A Web3 sports management simulation game built on Godot 4.6. Integrating football manager mechanics, NFT economy, and real-time match data, it aims to deliver a World Cup edition football manager experience in 2026.",
			link: "https://qiulot.io",
			tags: ["GameFi", "Godot 4.6", "NFT Economy"],
			status: "Active",
			gradient: "from-cyan-600/20 to-blue-500/20"
		},
		{
			title: "Icehoo Engine",
			category: "Core Venture",
			description: "A highly modular 'Game-as-a-Service' (GaaS) platform built with the B.E.D. Stack (Bun + Elysia + Drizzle). It provides unified identity (Icehoo ID), Web3 asset management, and high-performance concurrent data processing capabilities for ecosystem games.",
			link: "https://icehoo.com",
			tags: ["GaaS", "B.E.D. Stack", "Backend"],
			status: "Active",
			gradient: "from-blue-700/20 to-sky-600/20"
		},
		{
			title: "Yin's Smart Mobility",
			category: "Core Venture",
			description: "An ultra-fast private car-moving protection system. Driven by 'medialess vehicle identification' and 'non-standard vehicle physical ID binding', it aims to establish a decent neighborhood travel order and intelligent perception. (Project FlashMove)",
			tags: ["Smart Mobility", "Privacy", "IoT"],
			status: "Active",
			gradient: "from-emerald-500/20 to-teal-500/20"
		},
		{
			title: "Shadow Frontier",
			category: "Creative Lab",
			description: "A dark-themed open-world RPG exploration masterpiece built on the Godot engine. Digging deep into Chinese ghost culture, it creates an immersive narrative and puzzle-solving experience for global players.",
			tags: ["GameDev", "RPG", "Godot"],
			status: "Active",
			gradient: "from-amber-700/20 to-stone-600/20"
		},
		{
			title: "Pure Bond",
			category: "Creative Lab",
			description: "A narrative experiment for female-oriented nurturing. Exploring AI-driven emotional interaction and digital companionship, it aims to create an emotional interaction medium with deep resonance.",
			tags: ["Creative", "AI Interaction", "GameDev"],
			status: "Active",
			gradient: "from-orange-400/20 to-yellow-300/20"
		},
		{
			title: "YouTube Transcript Automation Factory",
			category: "Creative Lab",
			description: "An automated pipeline for fetching YouTube transcripts, syncing with Google Sheets, and processing audio with Faster-Whisper for high-accuracy local transcription and archival.",
			link: "https://github.com/wt-wx/youtube-transcript-tool",
			tags: ["Python", "Automation", "Whisper AI", "YouTube API"],
			status: "Active",
			gradient: "from-red-600/20 to-orange-500/20"
		},
		{
			title: "Wonten Infinite Official",
			category: "Corporate",
			description: "The official website of Wonten Infinite‚Äîa full-platform IoT multi-level distribution system benchmarked against Youzan and Weimob‚Äîshowcasing the corporate vision, core technology, and business matrix.",
			link: "https://wuxian.xyz",
			tags: ["Marketing", "Corporate Identity"],
			status: "Live",
			gradient: "from-slate-500/20 to-gray-500/20"
		},
		{
			title: "Infinite Tech PMS (Ad Edition)",
			category: "Core Venture",
			description: "An advertising platform management system based on multiple revenue models and multi-level distribution systems. Provides complete functions for user management, device management, ad distribution, and revenue settlement.",
			tags: ["AdTech", "Platform Management", "Revenue System"],
			status: "Stable",
			gradient: "from-pink-500/20 to-rose-500/20"
		},
		{
			title: "Infinite Tech PMS (Core Edition)",
			category: "Core Venture",
			description: "A full-platform IoT multi-level distribution system solution. Adopting the B2B2C2C business model, it connects upstream government and enterprise needs and empowers channels, agents, and merchants for private domain distribution through resource integration.",
			tags: ["IoT", "Distribution", "B2B2C2C"],
			status: "Stable",
			gradient: "from-orange-500/20 to-red-500/20"
		},
		{
			title: "Home Office Camera",
			category: "Personal Hub",
			description: "A SOHO monitoring and recording project, using web cameras connected to Windows Server 2019 for real-time recording and automated NAS backup (Windows Native + Debian Web).",
			tags: ["SOHO", "Surveillance", "Hybrid OS"],
			status: "Active",
			gradient: "from-blue-500/20 to-indigo-500/20"
		},
		{
			title: "NGFS",
			category: "Professional Legacy",
			description: "Next Generation File System - A core storage architecture project from a previous company, exploring the boundaries of high-performance file systems.",
			tags: ["Storage", "Systems Programming"],
			status: "Legacy",
			gradient: "from-cyan-500/20 to-sky-500/20"
		},
		{
			title: "Zui.News",
			category: "Professional Legacy",
			description: "A Web3 news information platform exploring content distribution mechanisms in a decentralized context. (Pending Reboot)",
			tags: ["Web3", "Content Platform", "Decentralized"],
			status: "Legacy",
			gradient: "from-violet-500/20 to-fuchsia-500/20"
		}
	];
	return paginate(projects, { pageSize: 6 });
}

const { page } = Astro.props;
const projects = page.data;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#fafafa] dark:bg-[#0a0a0a] text-[#1a1a1a] dark:text-[#f0f0f0] font-['Outfit',sans-serif] selection:bg-brand/10 selection:text-brand">
		<Header />
		<main class="max-w-7xl mx-auto px-6 py-20 md:py-32 relative overflow-hidden">
			<!-- Abstract Background -->
			<div class="absolute top-0 right-0 w-[500px] h-[500px] bg-brand/5 blur-[120px] rounded-full -z-10 translate-x-1/2 -translate-y-1/2"></div>
			
			<div class="space-y-16">
				<!-- Header Section -->
				<header class="max-w-3xl space-y-6 animate-in fade-in slide-in-from-bottom-8 duration-1000">
					<h1 class="text-5xl md:text-7xl font-extrabold tracking-tight leading-tight">
						Crafting <span class="bg-clip-text text-transparent bg-gradient-to-r from-brand to-brand-dark">Futures</span> üõ†Ô∏è
					</h1>
					<p class="text-xl md:text-2xl text-muted-foreground font-light leading-relaxed">
						Following the "Three Horizons" strategic logic: from industrial-grade IoT foundations to high-growth AI digital assistants, documenting my hands-on exploration in architectural evolution, perception logic, and business empowerment.
					</p>
				</header>

				<!-- Schematic Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-muted/10 border border-muted/20 rounded-3xl overflow-hidden animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-200">
					{projects.map((project, index) => (
						<div class="group relative bg-[#fafafa] dark:bg-[#0a0a0a] p-8 md:p-10 hover:bg-white dark:hover:bg-white/[0.02] transition-colors duration-500">
							<!-- Category & Status -->
							<div class="flex justify-between items-start mb-8">
								<div class="flex items-center gap-3">
									<span class="text-[10px] font-black uppercase tracking-[0.2em] text-brand/60 italic">
										{project.category}
									</span>
								</div>
								
								{project.status === 'Active' && (
									<div class="flex items-center gap-2">
										<span class="relative flex h-1.5 w-1.5">
											<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand opacity-75"></span>
											<span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-brand"></span>
										</span>
										<span class="text-[9px] font-black uppercase tracking-widest text-brand/60 italic">Live</span>
									</div>
								)}
							</div>

							<!-- Title & Description -->
							<div class="space-y-4">
								<h3 class="text-2xl md:text-3xl font-black tracking-tight group-hover:text-brand transition-all duration-500">
									{project.link ? (
										<a href={project.link} target="_blank" class="flex items-center gap-3 w-fit">
											{project.title}
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="text-brand/30 group-hover:text-brand opacity-0 group-focus:opacity-100 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-500 shrink-0"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
										</a>
									) : project.title}
								</h3>
								<p class="text-muted-foreground leading-relaxed text-sm md:text-base font-normal max-w-lg">
									{project.description}
								</p>
							</div>

							<!-- Tech Stack (Tags) -->
							<div class="mt-8 flex flex-wrap gap-x-4 gap-y-2">
								{project.tags.map((tag) => (
									<span class="font-mono text-[10px] text-muted-foreground/40 hover:text-brand transition-colors uppercase tracking-widest">
										// {tag}
									</span>
								))}
							</div>

							<!-- Decorative Corner (Hover only) -->
							<div class="absolute top-0 right-0 w-8 h-8 opacity-0 group-hover:opacity-100 transition-opacity">
								<div class="absolute top-4 right-4 w-[2px] h-4 bg-brand/20"></div>
								<div class="absolute top-4 right-4 h-[2px] w-4 bg-brand/20"></div>
							</div>
						</div>
					))}
				</div>

                <!-- Pagination -->
                <Pagination page={page} />
			</div>
		</main>
		<Footer />
	</body>
</html>
