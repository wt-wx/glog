---
interface Props {
    slug: string;
}

const { slug } = Astro.props;
---

<div id="privacy-lock" class="my-12 p-12 rounded-[2rem] bg-muted/30 border-2 border-dashed border-muted-foreground/20 backdrop-blur-xl text-center animate-in zoom-in duration-500">
    <div class="mb-8 inline-flex items-center justify-center w-20 h-20 rounded-full bg-brand/10 text-brand">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
    </div>
    
    <h2 class="text-3xl font-bold mb-4">Protected Content</h2>
    <p class="text-muted-foreground mb-8 max-w-sm mx-auto">This post is private. Please authenticate and enter your access code to view the full content.</p>

    <div id="auth-section" class="space-y-6">
        <button 
            id="x-login-btn"
            class="flex items-center gap-3 px-8 py-4 bg-foreground text-background font-bold rounded-2xl hover:scale-105 transition-all shadow-xl hover:shadow-brand/20 active:scale-95 mx-auto"
        >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            Continue with X
        </button>

        <div id="passcode-section" class="hidden animate-in fade-in slide-in-from-top-4 duration-500">
            <p id="user-info" class="text-sm text-brand font-mono mb-4"></p>
            <div class="relative max-w-xs mx-auto">
                <input 
                    type="password" 
                    id="access-code" 
                    placeholder="Enter Access Code" 
                    class="w-full px-6 py-4 bg-background border border-muted rounded-2xl focus:outline-none focus:ring-2 focus:ring-brand focus:border-transparent transition-all text-center text-xl tracking-widest font-bold"
                />
            </div>
            <p id="error-msg" class="text-destructive text-sm mt-4 hidden"></p>
        </div>
    </div>
</div>

<script>
    import { supabase } from '../lib/supabase';

    const loginBtn = document.getElementById('x-login-btn');
    const authSection = document.getElementById('auth-section');
    const passcodeSection = document.getElementById('passcode-section');
    const accessCodeInput = document.getElementById('access-code') as HTMLInputElement;
    const userInfo = document.getElementById('user-info');
    const errorMsg = document.getElementById('error-msg');
    const lockScreen = document.getElementById('privacy-lock');
    const protectedContent = document.getElementById('protected-content');

    // Check current session
    const checkSession = async () => {
        const { data: { session } } = await supabase.auth.getSession();
        if (session) {
            handleAuthenticated(session.user);
        }
    };

    const handleAuthenticated = (user: any) => {
        loginBtn?.classList.add('hidden');
        passcodeSection?.classList.remove('hidden');
        if (userInfo) userInfo.textContent = `Hi, ${user.user_metadata.full_name || user.email}`;
    };

    loginBtn?.addEventListener('click', async () => {
        const { error } = await supabase.auth.signInWithOAuth({
            provider: 'twitter',
            options: {
                redirectTo: window.location.href
            }
        });
        if (error) {
            console.error('Login error:', error.message);
            alert('Login failed: ' + error.message);
        }
    });

    accessCodeInput?.addEventListener('input', async (e) => {
        const code = (e.target as HTMLInputElement).value;
        if (code.length >= 4) {
            // VERIFICATION LOGIC
            // For now, we use a simple check. In production, this should call an Edge Function or Supabase RPC
            // to verify against a hashed code in the database.
            // Example: const { data, error } = await supabase.rpc('verify_access_code', { post_slug: '...', code: code });
            
            // Temporary logic for demonstration
            if (code === '2026') {
                unlockContent();
            } else if (code.length === 6) { // Final check
                 errorMsg?.classList.remove('hidden');
                 if (errorMsg) errorMsg.textContent = 'Invalid access code. Please try again.';
            }
        }
    });

    const unlockContent = () => {
        lockScreen?.classList.add('fade-out');
        setTimeout(() => {
            lockScreen?.classList.add('hidden');
            protectedContent?.classList.remove('hidden');
            protectedContent?.classList.add('animate-in', 'fade-in', 'duration-1000');
        }, 500);
    };

    checkSession();
</script>

<style>
    .fade-out {
        opacity: 0;
        transform: scale(0.95);
        transition: all 0.5s ease;
    }
</style>
